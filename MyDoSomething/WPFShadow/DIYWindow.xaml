<Window x:Class="WPFShadow.DIYWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DIYWindow" Height="300" Width="300" BorderThickness="5" AllowsTransparency="True" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Effect>
        <DropShadowEffect ShadowDepth="1" BlurRadius="10" Direction="270" Opacity="0.75" Color="#FF211613"/>
    </Window.Effect>
    <Grid>        
        <Grid>
            <TextBlock TextWrapping="Wrap">既然是要在window上添加阴影效果，那么这个Effect就要作用在window上，
                 这里的关键点是BorderThickness，设置的太小的话看不见，只有较大时才看的清。这时的margin不起作用了，开始怀疑margin是否使用正确</TextBlock>
            <Button Width="60" Height="35" Content="Button"/>         
        </Grid>
    </Grid>
</Window>
        
    
