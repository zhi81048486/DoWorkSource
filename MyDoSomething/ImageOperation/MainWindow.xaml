<Window x:Class="ImageOperation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <!--<Viewbox Height="300" Width="300">-->
        <Border Name="border" ClipToBounds="True">
            <Image Name="image" Source="changcheng.jpg" MouseWheel="UIElement_OnMouseWheel" MouseLeftButtonDown="Image_OnMouseLeftButtonDown" MouseMove="Image_OnMouseMove" MouseLeftButtonUp="Image_OnMouseLeftButtonUp">
                <Image.RenderTransform>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"></ScaleTransform>
                </Image.RenderTransform>
            </Image>
        </Border>
        <!--</Viewbox>-->
    </Grid>
</Window>
