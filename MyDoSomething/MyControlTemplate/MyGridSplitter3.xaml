            </TabItem>-->
            <TabItem Header="第三个选择">
                <Button Style="{StaticResource Delete}"></Button>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="5" Background="Brown"/>
    </Grid>
