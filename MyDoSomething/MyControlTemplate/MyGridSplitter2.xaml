                                    </StackPanel>
                                    <StackPanel></StackPanel>
                                </DockPanel>
                                <DockPanel Name="myDockPanelTask" Margin="0,0,10,0" DockPanel.Dock="Top">
                                    <ListView>
                                        <ListView.View>
                                            <GridView AllowsColumnReorder="False">
