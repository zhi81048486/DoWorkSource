                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <Label Content="运行设置:" Width="100"/>
                                                <ComboBox Name="DoSetComboBox" Width="100" Margin="0" SelectedIndex="0">
                                                    <ComboBoxItem Content="立即开始"/>
