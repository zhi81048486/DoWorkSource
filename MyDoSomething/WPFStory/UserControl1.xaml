<UserControl x:Class="WPFStory.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel Width="200"    Height="200" Background="Yellow" Name="MyStackPanel">
            <Button Content="UC_Begin" Name="Button_Begin" Width="80" Height="25" Click="Button_Begin_Click"/>
        </DockPanel>
        <Border Width="200" Height="50" Background="Pink" Name="PinkPanel" Visibility="Collapsed">
            <Button Content="UC_Back" Name="Button_Back" Width="80" Height="25" Click="Button_Back_Click" Margin="10"/>
        </Border>
    </Grid>
</UserControl>
